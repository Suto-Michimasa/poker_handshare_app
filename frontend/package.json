{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:path": "pathpida --enableStatic --watch",
    "build": "pathpida --enableStatic && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,tsx}'",
    "format": "prettier --check './src/**/*.{js,ts,tsx}'",
    "format:write": "prettier --write './src/**/*.{js,ts,tsx}'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "husky": "npx husky install",
    "auto-create-storybook": "node -r esbuild-register scripts/createStory.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "esbuild": "^0.19.5",
    "esbuild-register": "^3.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "next": "14.0.1",
    "prettier": "^3.0.3",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.48.2",
    "ts-morph": "^20.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.5.2",
    "@storybook/addon-interactions": "^7.5.2",
    "@storybook/addon-links": "^7.5.2",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.5.2",
    "@storybook/nextjs": "^7.5.2",
    "@storybook/react": "^7.5.2",
    "@storybook/testing-library": "^0.2.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8",
    "eslint-config-next": "14.0.1",
    "eslint-plugin-storybook": "^0.6.15",
    "pathpida": "^0.22.0",
    "postcss": "^8.4.31",
    "storybook": "^7.5.2",
    "tailwindcss": "^3.3.5",
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "pnpm run lint:fix",
      "pnpm run format:write",
      "pnpm run auto-create-storybook"
    ]
  }
}
